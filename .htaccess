<IfModule mod_rewrite.c>
    RewriteEngine On

    # Yönetim paneli ve mevcut dosyalar için yeniden yazma yapma
    RewriteRule ^admin($|/.*) - [L]
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Tüm diğer istekleri public dizinine yönlendir
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
